@tailwind base;
@tailwind components;
@tailwind utilities;

h1 {
    @apply text-4xl;
}

h2 {
    @apply text-3xl;
}

h3 {
    @apply text-2xl;
}

h4 {
    @apply text-xl;
}

a:hover {
    @apply text-blue-600;
}
a {
    text-shadow: 1px 1px 1px black;
}

.holder::-webkit-scrollbar {
    display: none;
}

.holder {
    -ms-overflow-style: none;
    scrollbar-width: none;
}

/* add frosty background */
.frosty {
    backdrop-filter: blur(7px);
}